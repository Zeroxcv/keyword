<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lisk.keyword.mapper.EssayMapper">

    <resultMap id="EssayResult" type="com.lisk.keyword.pojo.Essay">
        <id column="id" property="id"/>
        <result property="textLabel" column="text_label"/>
        <result property="title" column="title"/>
        <result property="textContent" column="text_content"/>
        <result property="PublishedDate" column="published_date"/>
        <result property="dataSources" column="data_sources"/>
        <collection  property="labels"   javaType="java.util.List"        resultMap="LabelResult" />

    </resultMap>

    <resultMap id="LabelResult" type="com.lisk.keyword.pojo.Label">
        <id property="id" column="id"/>
        <result property="labelName" column="label_name"/>
        <result property="pdarticleId" column="pdarticle_id"/>
        <result property="pdarticleId" column="pdarticle_id"/>
        <result property="labelName" column="label_name"/>
    </resultMap>

    <select id="listEssays" parameterType="com.lisk.keyword.util.Page" resultType="com.lisk.keyword.pojo.Essay">
        SELECT * from t_pdarticle order by id
        <if test="start!=null and count!=null">
            limit #{start},#{count}
        </if>

    </select>
<!--    <select id="findAll" resultType="com.lisk.keyword.pojo.Essay">-->
    <select id="findAll" resultMap="EssayResult">
select id,text_label,title,text_content , published_date,data_sources,tabel_number,state from t_pdarticle    </select>
