    </select>
<!--    List<Essay> getUserListPage(Essay essay)-->
    <select id="getEssayListPage" resultType="com.lisk.keyword.pojo.Essay">
        SELECT * FROM t_pdarticle
         WHERE 1 = 1
        LIMIT #{offset},#{limit}
    </select>
</mapper>
